rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // チートデイの画像・動画
    match /cheatDays/{userId}/{fileName} {
      // 誰でも読める（公開コンテンツ）
      allow read: if true;

      // ログインユーザーのみアップロード可能
      // 自分のユーザーIDのフォルダにのみアップロード可能
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // レシピの画像（管理用）
    match /recipes/{fileName} {
      allow read: if true;
      // 認証済みユーザーなら誰でも管理画面からアップロード可能とする（簡易化）
      allow write: if request.auth != null;
    }

    // その他のパスは拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
